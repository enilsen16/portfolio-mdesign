doctype html
html
	head
		title Erik Nilsen
		link(rel='shortcut icon', type='image/png', href='../www/img/favicon.ico')
		link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.3/normalize.min.css')
		link(type='text/css', rel='stylesheet', href='stylesheets/materialize.min.css', media='screen,projection')
		link(rel='stylesheet', href='../www/stylesheets/style.css')
		meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
		meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no')
	body
		header
			.navbar-fixed#page-top
				nav.teal.darken-2(role='navigation')
					.nav-wrapper.container
						a.brand-logo(href='#page-top', style='visibility: hidden') Erik Nilsen
							ul.right.hide-on-med-and-down
								li
									a(href='#projects') Projects
								li
									a(href='#about') About
								li
									a(href='#contact') Contact
						a.button-collapse(href='#', data-activates='nav-mobile')
							i.mdi-navigation-menu
						ul#nav-mobile.side-nav
							li
								a(href='#page-top') Home
							li
								a(href='#projects') Projects
							li
								a(href='#about') About
							li
								a(href='#contact') Contact
		#index-banner.section.no-pad-bot.teal
			.container
				br
				br
				h1.header.center.white-text Erik Nilsen
				.row.center
					h5.header.col.s12.teal-text.text-lighten-4 Ruby and JavaScript Developer
				br
	
		block content
		script(type='text/javascript', src='https://code.jquery.com/jquery-2.1.1.min.js')
		script(type='text/javascript', src='../www/javascript/materialize.min.js')
		script(type='text/javascript', src='../www/javascript/main.js')
