section#contact
	.container
		.row
			.col.l12.m12.s12 
				h2 Contact Me
				
				.row
					form.col.s12(action='http://formspree.io/erik@erikdnilsen')
						.row
							.input-field.col.s6
								label(for="name") Name
								input(id="name", type="text", class="validate")
							.input-field.col.s6
								label(for='email') Email
								input(id='email', type='email', name="_replyto")
						.row
							.input-field.col.s12
								label(for='message') Message
								textarea#textarea1.materialize-textarea(name="message", rows="3")
								input(type="hidden", value="Someone sent you an email from your site!", name="_subject")
								input(type='hidden', style="display:none", name="_gotcha")
						.row
							button.btn.waves-effect.waves-light(type='submit', name='action')
									| Submit
									i.mdi-content-send.right
